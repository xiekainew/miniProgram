/* pages/layout/layout.wxss */
.wrapper{
	margin: 20rpx;
	display: flex;
}
.header{
	flex: 0 0 150rpx;
	width: 150rpx;
	height: 150rpx;
	background: blue;
	margin-right: 10rpx;
	border-radius: 50%;
}
.content{
	flex: 1;
	background: #f2f2f2;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	font-size: 0;
}
.text{
	font-size: 30rpx;
	line-height: 100%;
}
.item{
	display: inline-block;
}
.arrow{
	margin: 20rpx;

	height: 50rpx;
	line-height: 50rpx;
	font-size: 30rpx;
	background: #999;
}