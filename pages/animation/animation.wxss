/* pages/animation/animation.wxss */
.box{
	width: 80%;
	margin: 50rpx auto 0;
	border: 2rpx solid #999;
	height: 10rpx;
	overflow: hidden;
	transition: all 0.2s linear;
}
.box.show{
	height: 100%;
}
.box-item{
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	background: #f3f3f3;
}
.box-item:nth-child(2n) {
	background: #f9f9f9;
}